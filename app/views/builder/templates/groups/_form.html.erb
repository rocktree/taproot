<%= simple_form_for(
  [:builder, current_site, current_template, current_template_group]
) do |f| %>
  <div class="half-row">
    <%= f.input :title %>
    <%= f.input :position, :as => :string %>
    <%= em_p("This is the label that will appear in the sidebar when a user is 
      within a page using the #{current_template.title} template.") %>
  </div>
  <%= f.submit "Save Form Section" %>
<% end %>