<ul>
  <% current_template_actions.each do |t| %>
    <%= content_tag(
      :li, 
      link_to(t[:title], t[:path]),
      :class => sidebar_item_active?(t) ? 'active' : nil
    ) %>
  <% end %>
</ul>

<% if current_template.deletable? %>
<ul>
  <h3>Actions</h3>
  <%= content_tag(
    :li, 
    link_to('Delete Template', builder_route([current_template], :show), 
      :method => :delete, :data => { :confirm => 'Are you sure?' })
  ) %>
</ul>
<% end %>
