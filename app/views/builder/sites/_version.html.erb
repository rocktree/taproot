<article class="version">
  <%= avatar(version_user(version), 84) %>
  <span class="version-content">
    <%= version_content(version) %>
  </span>
  <div class="notes">
    <span class="date">
      <%= "#{time_ago_in_words(version.created_at)} ago" %>
    </span>
    <span class="site">
      <%= link_to(
        version.item.cache.site_title,
        version.item.cache.site_path
      ) %>
    </span>
  </div>
</article>
