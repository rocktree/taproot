<header class="page-header">
  <h1><%= current_page.title %></h1>
  <%= simple_form_for current_page, :url => site_editor_pages_path do |f| %>
    <%= f.input :title, :label => false, :placeholder => 'Title' %>
    <%= f.submit "Next" %>
  <% end %>
  <div class="labels">
    <span class="tk-label red template">
      <i class="icon-file"></i>
      <strong>Status:</strong>
      <span>Draft</span>
    </span>
    <span class="tk-label template">
      <i class="icon-file"></i>
      <strong>Template:</strong>
      <span><%= current_template.title %></span>
    </span>
  </div>
</header>

