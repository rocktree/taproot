/* Color Palette
============================ */
$color-primary: #<%= SapwoodSetting.design.colors.primary %>;
$color-secondary: #<%= SapwoodSetting.design.colors.secondary %>;
$color-dark: #<%= SapwoodSetting.design.colors.dark %>;
$color-grey: #<%= SapwoodSetting.design.colors.grey %>;
$color-light: #<%= SapwoodSetting.design.colors.light %>;

// used primarily for notifications:
$color-warning: #CCA300;
$color-danger: #CC0000;
$color-success: #008A2E;

/* Tones
============================ */
// color factors -- to increase tone
$color-factor-1: 5%;
$color-factor-2: 15%;
$color-factor-3: 25%;

/*
 * These tone calculations are performed automatically.
 * They provide you with a light, lighter, lightest, 
 * dark, darker, darkest variations of your palette.
 *
 * You don't need to change anything below, but can
 * if you'd like, or you can add new variations.
 */
$color-primary-light:     lighten($color-primary, $color-factor-1);
$color-primary-lighter:   lighten($color-primary, $color-factor-2);
$color-primary-lightest:  lighten($color-primary, $color-factor-3);
$color-primary-dark:      darken($color-primary, $color-factor-1);
$color-primary-darker:    darken($color-primary, $color-factor-2);
$color-primary-darkest:   darken($color-primary, $color-factor-3);

$color-secondary-light:     lighten($color-dark, $color-factor-1);
$color-secondary-lighter:   lighten($color-dark, $color-factor-2);
$color-secondary-lightest:  lighten($color-dark, $color-factor-3);
$color-secondary-dark:      darken($color-dark, $color-factor-1);
$color-secondary-darker:    darken($color-dark, $color-factor-2);
$color-secondary-darkest:   darken($color-dark, $color-factor-3);

$color-dark-light:     lighten($color-dark, $color-factor-1);
$color-dark-lighter:   lighten($color-dark, $color-factor-2);
$color-dark-lightest:  lighten($color-dark, $color-factor-3);

$color-grey-light:     lighten($color-grey, $color-factor-1);
$color-grey-lighter:   lighten($color-grey, $color-factor-2);
$color-grey-lightest:  lighten($color-grey, $color-factor-3);
$color-grey-dark:      darken($color-grey, $color-factor-1);
$color-grey-darker:    darken($color-grey, $color-factor-2);
$color-grey-darkest:   darken($color-grey, $color-factor-3);

$color-light-dark:      darken($color-light, $color-factor-1);
$color-light-darker:    darken($color-light, $color-factor-2);
$color-light-darkest:   darken($color-light, $color-factor-3);

$color-success-light:     lighten($color-success, $color-factor-1);
